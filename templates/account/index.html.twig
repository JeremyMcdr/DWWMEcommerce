{% extends 'base.html.twig' %}


{% block title %}Mon compte - The French Boutique{% endblock %}

{% block content %}
    <div class="container account-index">

        <h2 class="">Mon compte</h2>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-success mt-2" href="/admin">Acceder au backoffice</a><br>
        {% endif %}

        <p class="mt-3">Bienvenue {{ app.user.firstname }}, bienvenue sur votre compte The French Boutique
        </p>
        <br>

    <div class="row">
        <div class="col-md-4">
            <div class="account-item">
                <a href="{{ path('app_account_password') }}">Mot de passe</a>
            </div>
        </div>
    {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_PREPARATEUR') %}
                <div class="col-md-4">
                    <div class="account-item">
                        <a href="{{ path('app_account_address') }}">Gérer mes adresses</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="account-item">
                        <a href="{{ path('app_account_order') }}">Gérer mes commandes</a>
                    </div>
                </div>
            </div>

        </div>
    {% endif %}
{% endblock %}
