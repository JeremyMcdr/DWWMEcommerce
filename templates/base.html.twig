    <div class="container {% if block('carousel') is not defined %}mt-5{% endif %} col-12" style="background-color: white; padding-left: 0;padding-right: 0;">

        <!-- Three columns of text below the carousel -->
        <div class="container col-12" style="padding-left: 0;padding-right: 0">
