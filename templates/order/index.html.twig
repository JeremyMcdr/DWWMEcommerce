{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - The French Boutique{% endblock %}

{% block content %}
    <div class="container" style="display: flex; flex-direction: row">
        <div class="pannier">

            <h2 class="">Choisissez vos préférences avant de passer votre commande sur le site</h2>

            <div class="row">
                <div class="col-md-6">
                    {% set formhtml %}
                        {{ form_start(form, {action:path('app_order_recap')}) }}
                        {{ form_label(form.addresse, 'Choisissez votre addresse de livraison') }}
                        <a style="color: black" href="{{ path('app_account_address_add') }}">Ajouter une nouvelle adresse</a>
                        {{ form_end(form) }}
                    {% endset %}
                    {{ formhtml|replace({'[br]' : '<br/>'})|raw }}
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <b>Récap de la commande</b>
                        <p>Retrouver le récapitulatif de vos produit</p>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
