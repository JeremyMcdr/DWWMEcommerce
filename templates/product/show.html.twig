{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - The French Boutique{% endblock %}



{% block content %}
    <div class="container"  style="display: flex; flex-direction: row">
    <div class="pannier">
        <h1 style="padding-top: 35px">{{ product.name }}</h1>
            <div class="row mt-5">
                <div class="col-md-5">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                </div>
            <div class="col-md-7 my-auto">
            <p>{{ product.subtitle }}</p>
                <span class="product-single-page">{{ product.price / 100|number_format(2) }}â‚¬</span>
                <p>
                    {{ product.description }}
                </p>
                <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary my-custom-class ajouterPannierBtn">Ajouter au panier</a>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
